<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.SetHomeKitActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_53"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_homekit_logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_gravity="center_horizontal"
        android:text="@string/home_input_homekit_code"
        android:textSize="@dimen/textSize20"
        android:textColor="@color/color_3f4663"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_gravity="center_horizontal"
        android:text="@string/home_input_homekit_code_tip"
        android:textSize="@dimen/textSize12"
        android:textColor="@color/color_3f4663" />

    <com.yctc.zhiting.widget.CustomEditTextView
        android:id="@+id/cetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        app:cet_bg="@drawable/selector_stroke_blue_gray"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        tools:text="设置代码不正确，请重新输入！"
        android:textColor="@color/color_FF0000"
        android:textSize="@dimen/textSize12" />

</LinearLayout>