<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_c10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/common_tips"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_23"
        android:text="账号注销为风险操作，需要获取你的手机（135****4512）验证码进行验证"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_26"
        android:background="@drawable/shape_eeeeee_c4"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCode"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="6"
            android:hint="@string/mine_input_verification_code_hint"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_18"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_19"
            android:textColor="@color/color_3f4663"
            android:textColorHint="@color/color_94A5BE"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_15"
            android:text="@string/mine_get_verification_code"
            android:textColor="@color/color_2da3f6_94a5be_enabled"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/rbConfirm"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:indeterminateDrawable="@anim/rotation_progressbar"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_18"
            android:text="@string/mine_confirm_cancellation"
            android:textColor="@color/color_2da3f6"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/color_DDDDDD" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_18"
            android:text="@string/cancel"
            android:textColor="@color/color_94A5BE"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>