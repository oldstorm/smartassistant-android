<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PwdModifyActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_76"
                android:layout_marginRight="@dimen/dp_46"
                android:text="@string/mine_old_pwd"
                android:textColor="@color/color_94A5BE"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_47"
                android:layout_marginRight="@dimen/dp_53"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etOldPwd"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/mine_please_input_old_pwd"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/color_3f4663"
                    android:textColorHint="@color/color_94A5BE"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:id="@+id/ivOldPwdVisible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/icon_password_visible"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/viewLineOldPwd"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginRight="@dimen/dp_53"
                android:background="@color/color_CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_46"
                android:text="@string/mine_new_pwd"
                android:textColor="@color/color_94A5BE"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_47"
                android:layout_marginRight="@dimen/dp_53"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/mine_please_input_new_pwd"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/color_3f4663"
                    android:textColorHint="@color/color_94A5BE"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:id="@+id/ivPwdVisible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/icon_password_visible"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/viewLinePassword"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginRight="@dimen/dp_53"
                android:background="@color/color_CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_46"
                android:text="@string/mine_confirm_new_pwd"
                android:textColor="@color/color_94A5BE"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_47"
                android:layout_marginRight="@dimen/dp_53"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etConfirmPwd"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/mine_confirm_new_pwd_hint"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/color_3f4663"
                    android:textColorHint="@color/color_94A5BE"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:id="@+id/ivConfirmPwdVisible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/icon_password_visible"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/viewLineConfirmPwd"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginRight="@dimen/dp_53"
                android:background="@color/color_CCCCCC" />

            <LinearLayout
                android:id="@+id/llConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_47"
                android:layout_marginTop="@dimen/dp_65"
                android:layout_marginRight="@dimen/dp_50"
                android:background="@drawable/shape_2da3f6_c4"
                android:gravity="center"
                android:padding="@dimen/dp_19">

                <ProgressBar
                    android:id="@+id/rbConfirm"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_11"
                    android:indeterminateDrawable="@anim/rotation_progressbar_white"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize14"
                    android:textStyle="bold"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>