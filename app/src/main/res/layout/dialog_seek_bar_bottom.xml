<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_white_top_c10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_17"
            android:gravity="left"
            android:text="亮度"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/color_3F4663"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15"
            android:src="@drawable/icon_close" />
    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE" />

    <LinearLayout
        android:id="@+id/llOperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_f6f8fd_c30"
        android:padding="@dimen/dp_5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvLess"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:background="@drawable/selector_2da3f6_f6f8fd_c30"
            android:text="@string/scene_less"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/color_white_94a5be"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvEqual"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:background="@drawable/selector_2da3f6_f6f8fd_c30"
            android:text="@string/scene_equal"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/color_white_94a5be"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvGreater"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:gravity="center"
            android:background="@drawable/selector_2da3f6_f6f8fd_c30"
            android:text="@string/scene_greater"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/color_white_94a5be"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/textSize50"
            android:textColor="@color/color_3f4663"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="@dimen/textSize24"
            android:textColor="@color/color_3f4663"
            android:textStyle="bold"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@null"
        android:max="100"
        android:maxHeight="@dimen/dp_40"
        android:minHeight="@dimen/dp_40"
        android:progressDrawable="@drawable/seekbar_shape"
        android:thumb="@drawable/bitmap_seek_thumb"
        android:duplicateParentState="true"
        android:splitTrack="false"/>
    <TextView
        android:id="@+id/tvTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/shape_f6f8fd_c10"
        android:padding="@dimen/dp_18"
        android:layout_margin="@dimen/dp_15"
        android:text="@string/common_confirm"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/color_3F4663"
        android:textStyle="bold"/>

</LinearLayout>