<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f8fd"
    tools:context=".activity.DisposablePwdAddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_21"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/home_disposable_pwd_add"
            android:textColor="@color/color_3f4663"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:text="@string/home_disposable_pwd_add_tip"
            android:textColor="@color/color_94A5BE"
            android:textSize="@dimen/textSize12" />

        <EditText
            android:id="@+id/etDisposable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_37"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/please_input_password_name"
            android:textColorHint="@color/color_94A5BE"
            android:textColor="@color/color_3f4663"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/etDisposable"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_37"
            android:background="@color/color_3f4663" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_27"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSix"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/home_please_input_six_pwd"
                android:textColor="@color/color_94A5BE"
                android:textSize="@dimen/textSize12" />

            <ImageView
                android:id="@+id/ivEye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@drawable/icon_password_invisible" />
        </LinearLayout>


        <com.yctc.zhiting.widget.CustomEditTextView
            android:id="@+id/cetv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@+id/tvSix"
            app:cet_bg="@drawable/selector_stroke_blue_gray"
            app:cet_count="6" />

        <TextView
            android:id="@+id/tvPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_37"
            android:background="@drawable/img_mul_line"
            android:gravity="center"
            android:text="123456"
            android:textColor="@color/color_3f4663"
            android:textSize="@dimen/textSize30"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_27"
            android:layout_gravity="right"
            android:padding="@dimen/dp_10"
            android:text="@string/home_copy_pwd"
            android:textColor="@color/color_2da3f6"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cetv"
            android:padding="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_37"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_37"
            android:background="@drawable/shape_2da3f6_c10"
            android:gravity="center"
            android:text="@string/home_generate"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>