<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_25"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_door_lock"/>

        <TextView
            android:id="@+id/tvApplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/door_setting_hint9"
            android:textColor="#ff3699ff"
            android:textSize="@dimen/textSize18"
            android:layout_marginTop="@dimen/dp_30"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_F1F4FC"
        app:layout_constraintTop_toBottomOf="@+id/ll1"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:padding="@dimen/dp_20"
       android:orientation="vertical">

       <TextView
           android:id="@+id/tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/door_setting_hint10"
           android:textColor="#ff3f4663"
           android:textSize="18sp"
           android:textStyle="bold"
           />

       <TextView
           android:id="@+id/tvHint"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/door_setting_hint11"
           android:textColor="#ff3f4663"
           android:textSize="@dimen/textSize14"
           android:layout_marginTop="@dimen/dp_20" />

   </LinearLayout>

</LinearLayout>