<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f8fd"
    tools:context=".activity.TransferOwnerActivity"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tvTips"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_13"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:text="@string/mine_transfer_tips"
        android:textSize="@dimen/textSize12"
        android:textColor="@color/color_94A5BE" />

    <TextView
        android:id="@+id/tvSelect"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTips"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/white"
        android:text="@string/mine_select_member_transfer"
        android:textColor="@color/color_94A5BE"
        android:textSize="@dimen/textSize12"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMember"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSelect"
        app:layout_constraintBottom_toTopOf="@+id/tvTransfer"
        android:layout_marginBottom="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tvTransfer"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dp_15"
        android:padding="@dimen/dp_19"
        android:background="@drawable/shape_2da3f6_c10"
        android:text="@string/mine_transfer"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14"
        android:gravity="center" />


</androidx.constraintlayout.widget.ConstraintLayout>