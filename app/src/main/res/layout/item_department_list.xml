<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_18"
        android:textColor="@color/color_3F4663"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvNum"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="总经办" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:paddingRight="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@+id/tvName"
        app:layout_constraintRight_toLeftOf="@+id/ivIndicator"
        app:layout_constraintTop_toTopOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        android:gravity="center"
        android:background="@color/white"
        android:text="10人"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/color_94a5be" />

    <ImageView
        android:id="@+id/ivIndicator"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:paddingRight="@dimen/dp_15"
        android:background="@color/white"
        android:src="@drawable/icon_gray_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvName" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE"
        app:layout_constraintLeft_toLeftOf="@+id/tvName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />
</androidx.constraintlayout.widget.ConstraintLayout>