<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_white_c10"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_scene_null" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="@string/scene_not"
            android:textColor="@color/color_94A5BE"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:id="@+id/llReconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_150"
            android:minHeight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/shape_2da3f6_c4"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivReconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_6"
                android:src="@drawable/icon_scenerefresh_white" />
            <TextView
                android:id="@+id/tvReconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center"
                android:text="@string/scene_add_scene"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="@string/scene_how_to_create"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/color_94A5BE" />

    <LinearLayout
        android:id="@+id/llHow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_c10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/icon_scene_lession" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_19"
            android:text="@string/scene_start"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/color_3f4663"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>