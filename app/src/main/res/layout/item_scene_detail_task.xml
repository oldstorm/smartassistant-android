<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">
        <TextView
            android:id="@+id/tvDel"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_70"
            android:gravity="center"
            android:text="@string/mine_remove"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_bottom_c10"
            android:padding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="08:00"
                    android:textColor="@color/color_3f4663"
                    android:textSize="@dimen/textSize14"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingLeft="@dimen/dp_9"
                    android:paddingRight="@dimen/dp_9"
                    android:drawablePadding="@dimen/dp_2"
                    android:background="@drawable/shape_eaf6fe_c30"
                    android:drawableLeft="@drawable/icon_scene_clock"
                    android:text="10秒后"
                    android:textColor="@color/color_2da3f6"
                    android:textSize="@dimen/textSize10"
                    android:visibility="gone"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:text="定时"
                    android:textColor="@color/color_3f4663"
                    android:textSize="@dimen/textSize14"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:text="大厅"
                    android:textColor="@color/color_94A5BE"
                    android:textSize="@dimen/textSize11"
                    android:visibility="gone"/>
            </LinearLayout>


            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/icon_scene" />
        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"/>
</LinearLayout>