<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAddPicParent"
    android:layout_width="@dimen/dp_63"
    android:layout_height="@dimen/dp_63"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_3"
        android:background="@drawable/stroke_dash_94a5be"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_add_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:text="@string/mine_add_picture"
            android:textColor="@color/color_3f4663"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>
</LinearLayout>