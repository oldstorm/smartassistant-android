<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f8fd"
    tools:context=".activity.DLGuideActivity">
    <ImageView
        android:id="@+id/ivImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_door_lock_with_hand" />
    <TextView
        android:id="@+id/tvTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivImg"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/home_use_after_add"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize14" />

    <TextView
        android:id="@+id/tvStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTips"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/home_dl_add_auth_step"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_23"
        app:layout_constraintTop_toBottomOf="@+id/tvStep"
        android:src="@drawable/img_dl_add_step" />

    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/dp_19"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/shape_2da3f6_c10"
        android:gravity="center"
        android:text="@string/home_added"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize14" />
</androidx.constraintlayout.widget.ConstraintLayout>