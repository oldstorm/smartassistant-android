<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_top_c10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_15"
        android:src="@drawable/icon_close" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/eeeeee" />

    <TextView
        android:id="@+id/tvAddHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_add_family"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="left"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_18"
        android:text="@string/mine_add_home"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/eeeeee" />

    <TextView
        android:id="@+id/tvAddCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_add_company"
        android:gravity="left"
        android:drawablePadding="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_18"
        android:text="@string/mine_add_company"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize14" />
</LinearLayout>