<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yctc.zhiting.widget.CircleImageView
        android:id="@+id/cvAvatar"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/icon_default_avatar" />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/cvAvatar"
        app:layout_constraintLeft_toRightOf="@+id/cvAvatar"
        app:layout_constraintRight_toRightOf="@+id/ivArrow"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="小丽suo"
        android:textSize="@dimen/textSize14"
        android:textColor="@color/color_3f4663"/>

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintLeft_toRightOf="@+id/cvAvatar"
        app:layout_constraintRight_toLeftOf="@+id/ivArrow"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:text="管理员"
        android:textSize="@dimen/textSize12"
        android:textColor="@color/color_94A5BE"/>
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        app:layout_constraintTop_toTopOf="@+id/cvAvatar"
        app:layout_constraintBottom_toBottomOf="@+id/cvAvatar"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/selector_circle" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE"
        app:layout_constraintTop_toBottomOf="@+id/cvAvatar"
        app:layout_constraintLeft_toRightOf="@+id/cvAvatar"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_14" />
</androidx.constraintlayout.widget.ConstraintLayout>