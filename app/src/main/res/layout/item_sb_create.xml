<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_13"
    android:paddingRight="@dimen/dp_19"
    android:paddingTop="@dimen/dp_19">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.yctc.zhiting.widget.TagTextView
            android:id="@+id/tvName"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="显示插件包名称Xiaomi Gateway"
            android:textColor="@color/color_3f4663"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mine_remove"
            android:textColor="@color/color_2da3f6"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"
            tools:visibility="visible"/>
        <com.yctc.zhiting.widget.RingProgressBar
            android:id="@+id/ringProgressBar"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:maxLines="3"
        android:textColor="@color/color_3f4663"
        android:textSize="@dimen/textSize12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/eeeeee" />
</LinearLayout>