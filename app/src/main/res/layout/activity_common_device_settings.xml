<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F6F8FD"
    android:fillViewport="true"
    tools:context=".activity.BrandDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_marginTop="@dimen/dp_10">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_50"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <TextView
                     android:id="@+id/tvNoCommon"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:layout_marginStart="@dimen/dp_15"
                     android:text="@string/devices_setting_hint1"
                     android:textColor="@color/color_3f4663"
                     android:textSize="@dimen/textSize16"
                     android:textStyle="bold"/>

                 <ImageView
                     android:id="@+id/ivTop"
                     android:layout_width="@dimen/dp_20"
                     android:layout_height="@dimen/dp_15"
                     android:src="@drawable/icon_login_arrow_down"
                     android:padding="@dimen/dp_5"
                     android:layout_marginEnd="@dimen/dp_10"/>

             </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/eeeeee"/>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvDevice1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_10"
                  android:nestedScrollingEnabled="false"
                  android:overScrollMode="never" />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_marginTop="@dimen/dp_10">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/dp_50"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <TextView
                     android:id="@+id/tvCommon"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:layout_marginStart="@dimen/dp_15"
                     android:text="@string/devices_setting_hint2"
                     android:textColor="@color/color_3f4663"
                     android:textSize="@dimen/textSize16"
                     android:textStyle="bold"/>

                 <ImageView
                     android:id="@+id/ivBottom"
                     android:layout_width="@dimen/dp_20"
                     android:layout_height="@dimen/dp_15"
                     android:src="@drawable/icon_login_arrow_down"
                     android:padding="@dimen/dp_5"
                     android:layout_marginEnd="@dimen/dp_10"/>

             </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/eeeeee"/>

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/rvDevice2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_10"
                  android:nestedScrollingEnabled="false"
                  android:overScrollMode="never" />

          </LinearLayout>



            <TextView
                android:id="@+id/tvSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:text="@string/home_sort_save"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/selector_blue_2da3f6_c10"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:textStyle="bold"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>