<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_c10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/mine_invite_code_generated"
                android:textColor="@color/color_3F4663"
                android:textSize="@dimen/textSize14" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:src="@drawable/icon_close" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/color_EEEEEE" />

        <com.yctc.zhiting.widget.CircleImageView
            android:id="@+id/ciAvatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_33"
            android:src="@drawable/icon_default_avatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="智汀001"
            android:textColor="@color/color_3F4663"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_3F4663"
            android:textSize="@dimen/textSize14"
            tools:text="邀请您加入办公室007号" />

        <ImageView
            android:id="@+id/ivCode"
            android:layout_width="167dp"
            android:layout_height="167dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_25"
            android:text="@string/mine_invite_code_valid"
            android:textColor="@color/color_94A5BE"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_white_c10"
        android:gravity="center"
        android:paddingTop="@dimen/dp_19"
        android:paddingBottom="@dimen/dp_19"
        android:text="@string/mine_invite_code_save"
        android:textColor="@color/color_3F4663"
        android:textSize="@dimen/textSize14"
        android:textStyle="bold" />

</LinearLayout>