<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slParent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:background="@drawable/shape_white_c4"
    app:hl_cornerRadius="@dimen/dp_4"
    app:hl_shadowLimit="@dimen/dp_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/icon_icon_selected"
            android:visibility="gone"
            tools:visibility="visible"/>
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingLeft="@dimen/dp_11"
            android:paddingTop="@dimen/dp_11"
            android:paddingRight="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvName"
            tools:src="@drawable/icon_home_default_cover"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_12"
            android:gravity="center_horizontal"
            tools:text="设备图片"
            android:textSize="@dimen/textSize14"
            android:textColor="@color/color_3f4663"
            android:textStyle="bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.lihang.ShadowLayout>