<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_top_c10"
    android:paddingBottom="@dimen/dp_15">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp_5"
        android:padding="@dimen/dp_10"
        android:src="@drawable/icon_close" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/ivClose"
        app:layout_constraintBottom_toBottomOf="@+id/ivClose"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/home_color"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_3f4663"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/ivClose"
        android:background="@color/eeeeee" />

    <com.yctc.zhiting.widget.colorpicker.ColorCircleView
        android:id="@+id/ccv"
        android:layout_width="@dimen/dp_210"
        android:layout_height="@dimen/dp_210"
        android:layout_marginTop="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tvTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ccv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="@drawable/shape_f1f4fd_c10"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/color_3f4663_94a5be"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>