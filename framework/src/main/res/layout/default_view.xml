<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_default_lcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_network_icon" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:text="@string/network_error"
        android:textColor="@color/gray_898989"
        android:textSize="@dimen/baseTextSize" />

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:padding="@dimen/dp_5"
        android:background="@drawable/radius_default_btn"
        android:gravity="center"
        android:text="@string/network_error_btn"
        android:textColor="@color/black_414141"
        android:textSize="@dimen/baseTextSize"
        android:visibility="gone"/>

</LinearLayout>
